{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Debug",
      "type": "shell",
      "command": "C:\\TDM-GCC-64\\bin\\gcc.exe",
      "args": [
        "-g", // gera informações de depuração
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-mconsole"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Compilar Release",
      "type": "shell",
      "command": "C:\\TDM-GCC-64\\bin\\gcc.exe",
      "args": [
        "-O2", // otimização para execução, sem símbolos de debug
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-mconsole"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
